{% extends 'base.html.twig' %}

{% block body %}
    <div class="brand">KRAKÓW TUTAJ SIĘ DZIEJE</div>
    <div class="address-bar">Strona o wydarzeniach w Krakowie</div>

    <nav class="navbar navbar-default" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <a class="navbar-brand" href="{{ path('homepage') }}">Kraków</a>
            </div>
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                    <li><a href="{{ path('event_index') }}">Wydarzenia</a></li>
                    <li><a href="{{ path('place_index') }}">Lokale</a></li>
                    <li><a href="{{ path('contact') }}">Kontakt</a> </li>
                </ul>
                {#<ul class="nav navbar-nav navbar-right">#}
                {#<button type="button" class="btn btn-default navbar-btn">Sign in</button>#}
                {#</ul>#}
            </div>
        </div>
    </nav>
    <div class="container">

        <div class="row">
            <div class="box">
                <div class="col-lg-12">
                    <hr>
                    <h2 class="intro-text text-center">Edycja miejsca: {{ place.name }}
                    </h2>
                    <hr>
                </div>
                <a class="btn btn-default" href="{{ path('place_index') }}" role="button">Powrót do listy lokali</a>
                {{ form_start(edit_form) }}
                {{ form_widget(edit_form) }}
                <input type="submit" class="btn btn-default" value="Edytuj" />
                {{ form_end(edit_form) }}
                <a href="{{ path('place_confirm', { 'id': place.id }) }}" class="btn btn-default">Usuń</a>
            </div>
        </div>
    </div>
    <footer>
        <div class="container" style="width: 100%">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <p>Marcin Flis</p>
                </div>
            </div>
        </div>
    </footer>
{% endblock %}

