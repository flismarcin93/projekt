{% extends 'base.html.twig' %}

{% block body %}
    <div class="brand">KRAKÓW TUTAJ SIĘ DZIEJE</div>
    <div class="address-bar">Strona autorstwa Marcina Flis</div>

    <nav class="navbar navbar-default" role="navigation">
        <div class="container">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">

                <a class="navbar-brand" href="{{ path('homepage') }}">Kraków</a>
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                    <li><a href="{{ path('event_index') }}">Wydarzenia</a></li>
                    <li><a href="{{ path('place_index') }}">Lokale</a></li>
                    <li><a href="{{ path('contact') }}">Kontakt</a> </li>
                </ul>
                {#<ul class="nav navbar-nav navbar-right">#}
                {#<button type="button" class="btn btn-default navbar-btn">Sign in</button>#}
                {#</ul>#}
            </div><!-- /.navbar-collapse -->
        </div><!-- /.container-fluid -->
    </nav>
    <div class="container" style="width: 75%">
        <div class="col-lg-12 text-center">
            <hr>
            <h2 class="intro-text text-center">Miejsca
            </h2>
            <hr>
        </div>
        <a class="btn btn-default" href="{{ path('place_new') }}" role="button">New</a>
    </div>
    <div class="container" style="width: 75%; margin-bottom: 100px">
        <div class="row" style="margin-left: 0px; margin-right: 0px">
            <div class="box">
                {% for place in places %}
                    <div class="col-lg-12 text-center">
                        <img class="img-responsive img-border img-full img-thumbnail" src="{{ asset('uploads/brochures/' ~ place.picture) }}">
                        <h2>{{ place.name }}
                            <br>
                            <small>{{ place.category }}</small>
                        </h2>
                        <p>{{ place.description }}</p>
                        <a href="{{ path('place_show', { 'id': place.id }) }}" class="btn btn-default btn-lg">Czytaj Więcej</a>
                        <hr>
                    </div>
                {% endfor %}

            </div>
        </div>

    </div>
    <!-- /.container -->

    <footer>
        <div class="container" style="width: 100%">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <p>Marcin Flis</p>
                </div>
            </div>
        </div>
    </footer>
{% endblock %}

