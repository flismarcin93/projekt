{% extends 'base.html.twig' %}

{% block body %}
    <div class="brand">KRAKÓW TUTAJ SIĘ DZIEJE</div>
    <div class="address-bar">Strona o wydarzeniach w Krakowie</div>

    <nav class="navbar navbar-default" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <a class="navbar-brand" href="{{ path('homepage') }}">Kraków</a>
            </div>
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                    <li><a href="{{ path('event_index') }}">Wydarzenia</a></li>
                    <li><a href="{{ path('place_index') }}">Lokale</a></li>
                    <li><a href="{{ path('contact') }}">Kontakt</a> </li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container">

        <div class="row">
            <div class="box">
                <div class="col-lg-12">
                    <hr>
                    <h2 class="intro-text text-center">Usuwanie wydarzenia: {{ place.name }}
                    </h2>
                    <hr>
                </div>
                <div class="col-lg-12 text-center">
                    <h2>Czy na pewno chcesz usunąć miejsce: {{ place.name }}</h2>
                    <a class="btn btn-default" href="{{ path('place_index') }}" role="button">NIE</a>
                    {{ form_start(delete_form) }}
                    <input type="submit" class="btn btn-default" value="TAK" >
                    {{ form_end(delete_form) }}
                </div>
            </div>
        </div>

    </div>
    <!-- /.container -->

    <footer>
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <p>Marcin Flis</p>
                </div>
            </div>
        </div>
    </footer>
{% endblock %}

