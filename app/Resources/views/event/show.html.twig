{% extends 'base.html.twig' %}


{% block body %}
    <div class="brand">KRAKÓW TUTAJ SIĘ DZIEJE</div>
    <div class="address-bar">Strona o wydarzeniach w Krakowie</div>

    <nav class="navbar navbar-default" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <a class="navbar-brand" href="{{ path('homepage') }}">Kraków</a>
            </div>
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                    <li><a href="{{ path('event_index') }}">Wydarzenia</a></li>
                    <li><a href="{{ path('place_index') }}">Lokale</a></li>
                    <li><a href="{{ path('contact') }}">Kontakt</a> </li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                {% if is_granted('ROLE_USER') -%}   <p>Jestes zalogowany jako: {{ user.username }}</p>
                    <a href="{{ path('fos_user_security_logout') }}">Wyloguj</a>
                {% endif %}

                </ul>
            </div>
        </div>
    </nav>
    <div class="container" style="width: 75%">
        <div class="col-lg-12 text-center">
            <a class="btn btn-default" href="{{ path('event_index') }}" role="button"><span class="glyphicon glyphicon-arrow-left" aria-hidden="true">Powrót do listy wydarzeń</span></a>
            <hr>

            <h2 class="intro-text text-center">{{ event.name }}

            </h2>
            <hr>
        </div>
    </div>
    <div class="container" style="width: 75%; margin-bottom: 100px">
        <div class="row" style="margin-left: 0px; margin-right: 0px">
            <div class="box" style="width: 100%">
                <div class="col-lg-12 text-center">
                    <h4>{% if event.date %}{{ event.date|date('d m Y') }}{% endif %}</h4>
                    <img class="img-responsive img-border img-full img-thumbnail" src="{{ asset('uploads/brochures/' ~ event.picture) }}">
                    <p> {{ event.place }}</p>
                    <p>{{ event.description }}</p>
                    <hr>
                    <h5>Oceny: {{ srednia }}
                    {% if srednia<=1 %}
                        <span class="glyphicon glyphicon-star-empty"></span>
                        <span class="glyphicon glyphicon-star-empty"></span>
                        <span class="glyphicon glyphicon-star-empty"></span>
                        <span class="glyphicon glyphicon-star-empty"></span>

                    {% endif %}
                    {% if srednia>1 and srednia<2 %}
                        <span class="glyphicon glyphicon-star"></span>
                        <span class="glyphicon glyphicon-star-empty"></span>
                        <span class="glyphicon glyphicon-star-empty"></span>
                        <span class="glyphicon glyphicon-star-empty"></span>

                    {% endif %}
                    {% if srednia>2 and srednia <3%}
                        <span class="glyphicon glyphicon-star"></span>
                        <span class="glyphicon glyphicon-star"></span>
                        <span class="glyphicon glyphicon-star-empty"></span>
                        <span class="glyphicon glyphicon-star-empty"></span>

                    {% endif %}
                    {% if srednia>3 and srednia<4 %}
                        <span class="glyphicon glyphicon-star"></span>
                        <span class="glyphicon glyphicon-star"></span>
                        <span class="glyphicon glyphicon-star"></span>
                        <span class="glyphicon glyphicon-star-empty"></span>
                    {% endif %}
                    {% if srednia>4 %}
                        <span class="glyphicon glyphicon-star"></span>
                        <span class="glyphicon glyphicon-star"></span>
                        <span class="glyphicon glyphicon-star"></span>
                        <span class="glyphicon glyphicon-star"></span>
                    {% endif %}
                    {% if srednia==5 %}
                        <span class="glyphicon glyphicon-star big"></span>
                    {% endif %}
                    </h5>
                    <hr>
                    <h5>Komentarze:</h5>
                    <hr>
                    <div class="comments"  style="margin-outside: 120px">
                    {% for coment in coments %}
                    <div class="media">
                        <div class="media-body">
                            <h4 class="media-heading">{{ coment.user }}</h4>
                            <p>{{ coment.content }}</p>
                        </div>
                    </div>
                    {% endfor %}

                    </div>
                    {% if is_granted('ROLE_ADMIN') -%}
                    <a href="{{ path('event_edit', { 'id': event.id }) }}" class="btn btn-default btn-lg"><span class="glyphicon glyphicon-edit" aria-hidden="true">Edytuj</span></a>
                    {% elseif is_granted('ROLE_USER') -%}
                    <a href="{{ path('comment_event_new', { 'id': event.id }) }}" class="btn btn-default btn-lg" target="cos" onclick="onls()"><span class="glyphicon glyphicon-comment" aria-hidden="true">Skomentuj</span></a>
                    <a href="{{ path('markevent_new', { 'id': event.id }) }}" class="btn btn-default btn-lg" target="cos2" onclick="onls2()"><span class="glyphicon glyphicon-thumbs-up" aria-hidden="true">Oceń</span></a>
                    {% else %}

                        {% block content %}

                            {% block fos_user_content %}
                            <div class="row">
                                <div class="col-sm-6">
                                    <p>Musisz sie zalogowac aby miec mozliwosc komentowania i oceniania</p>
                                    {{ render(controller('FOSUserBundle:Security:login')) }}
                                </div>
                                <div class="col-sm-6">
                                    <p>Jesli nie masz jeszcze konta zarejestruj sie:</p>
                                    {{ render(controller('FOSUserBundle:Registration:register')) }}
                                </div>
                            </div>
                            {% endblock fos_user_content %}
                        {% endblock content %}
                    {% endif %}
                    <hr>
                </div>
            </div>
        </div>
    </div>
    <div id="myModal" class="modal">
        <div class="modal-content">
            <span class="close">x</span>
            <iframe src="" name="cos" height="75%" width="100%">
            </iframe>
        </div>
    </div>
    <div id="myModal2" class="modal">
        <div class="modal-content">
            <span class="close" id="close2">x</span>
            <iframe src="" name="cos2" height="75%" width="100%">
            </iframe>
        </div>
    </div>
    <footer>
        <div class="container" style="width: 100%">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <p>Marcin Flis</p>
                </div>
            </div>
        </div>
    </footer>
    <script>
        var modal = document.getElementById('myModal');
        var modal2=document.getElementById('myModal2');

        var span = document.getElementsByClassName("close")[0];
        var span2=document.getElementById('close2');

        function onls() {
            modal.style.display="block";
        }
        function onls2() {
            modal2.style.display="block";
        }

        span.onclick=function () {
            modal.style.display="none";
        }
        span2.onclick=function () {
            modal2.style.display="none";
        }


    </script>
{% endblock %}

